rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection rules
    match /users/{userId} {
      // Users can only read/write their own document
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      // TODO: In production, restrict ANIMA updates to Cloud Functions only
      // For MVP testing, allow users to update their own documents including ANIMA
      allow update: if isOwner(userId);
      // For test cleanup, allow users to delete their own test documents
      allow delete: if isOwner(userId);
    }
    
    // Sessions collection rules
    match /sessions/{sessionId} {
      // Any authenticated user can create a session
      allow create: if isAuthenticated() && 
        // Must include required fields
        request.resource.data.keys().hasAll(['userA_Id', 'userB_Id', 'status', 'createdAt']) &&
        // One of the users must be the current user
        (request.resource.data.userA_Id == request.auth.uid || 
         request.resource.data.userB_Id == request.auth.uid);
      
      // Users can read sessions they're part of
      allow read: if isAuthenticated() && 
        (resource.data.userA_Id == request.auth.uid || 
         resource.data.userB_Id == request.auth.uid);
      
      // Users can update sessions they're part of (for adding resonance scores)
      allow update: if isAuthenticated() && 
        (resource.data.userA_Id == request.auth.uid || 
         resource.data.userB_Id == request.auth.uid);
      
      // Allow session deletion by participants (for test cleanup)
      allow delete: if isAuthenticated() && 
        (resource.data.userA_Id == request.auth.uid || 
         resource.data.userB_Id == request.auth.uid);
    }
    
    // Block/Report collection (for future implementation)
    match /reports/{reportId} {
      // Users can create reports
      allow create: if isAuthenticated() && 
        request.resource.data.reporter_Id == request.auth.uid;
      
      // Only admins can read reports
      allow read: if false;
      
      // Reports cannot be updated or deleted by users
      allow update: if false;
      allow delete: if false;
    }
  }
}